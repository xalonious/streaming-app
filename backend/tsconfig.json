{
  "compilerOptions": {
    "target": "ES2020",                        
    "module": "CommonJS",                      
    "outDir": "dist",                          
    "rootDir": "src",                          
    "strict": true,                            
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/types"]              
  },
  "include": ["src/**/*.ts"],                  
  "exclude": ["node_modules", "dist"]          
}